{
  "name": "solidity-analyzer-language-client",
  "description": "Language client extension for solidity-analyzer language server",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.65.0"
  },
  "repository": {
    "url": "https://github.com/parmanuxyz/solidity-analyzer"
  },
  "publisher": "parmanu",
  "scripts": {
    "vscode:prepublish": "npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
    "esbuild": "npm run esbuild-base -- --sourcemap",
    "esbuild-watch": "npm run esbuild-base -- --sourcemap --watch"
  },
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "properties": {
        "solidity-analyzer.languageServerPath": {
          "type": "string",
          "description": "Path to the solidity-analyzer-ls binary"
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "vscode-languageclient": "^8.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/vscode": "^1.65.0",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.18.17",
    "vscode-test": "^1.3.0"
  }
}
